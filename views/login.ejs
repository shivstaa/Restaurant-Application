<html lang="en">
    <div class="thing">
        <%- include("./partials/header.ejs") %> 
    </div>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Sun Devil Pizza</title>
    <link rel="stylesheet" href="Login.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,300,0,0" />
    <link rel="stylesheet" href="shadow.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
    <div class="login-card-container shadow-longer">
        <div class="login-card">
            <h1 style="text-align: center;">Sun Devil Pizza</h1>
            <!--Login card-->
            <div class="login-card-logo">
                <img src="ASU_Trident.png">
            </div>

            <!--Login card header-->
            <div class="login-card-header">
                
                <h2>Sign In</h2>
                <div>Please login with your ASU email or ID</div>
            </div>
            
            <!--Login card form-->
            <form action="/" class="login-card-form">
                
                    <!--Email input-->
                    <div class="form-item">
                        <span class="form-item-icon material-symbols-rounded">mail</span>
                        <input type="email" placeholder="Enter Email or ID" required autofocus>                    
                    </div>
                    
                    <!--Remember me-->
                    <div class="form-item-other">
                        <div class="checkbox">
                            <input type="checkbox" id="rememberMeCheckbox">
                            <label for="rememberMeCheckbox">Remember me</label>
                        </div>
                    </div>
                    
                    <button type="submit">Sign In</button>

                </form>
                <div class="login-card-footer">
                    <form action="/manage" class="login-card-form">
                        <button type="submit">Manage</button>
                    </form>
                </div>

        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

</html>

