<html lang="en">
  <%- include("./partials/header.ejs") %> 
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home - SunDevil Pizza</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="home.css">
  </head>
  <body>
    <div class="col">
      <!--Upper Spacing-->
      <div class="row"
      style=" margin-top: 3%; margin-bottom: 3%">
      </div>
    
      <!--Upper button-->
    <div class="row h-10"
    style="margin-bottom: 1%;">
      <button 
      class="btn btn-lg btn-primary justify-content-md-center mx-auto"
      style="width:10%; height:65%;">
        <p 
          class="mainButtonText"
          >Order Now</p>
    </button>
    </div>

      <!--Banner 1-->
      <div class="row h-25">
        <div class="rectangle">
          <div class="row h-100 justify-content-md-center">
          <!--Column 1-->
          <div class="col">

            <!--Button-->
            <button
            type="button"
            class="btn btn-lg btn-danger btn-outline-dark"
            style="display:flex; position:relative; left: 35%; top: 60%"
            href=""
            > <div class="priceButtonText">Order Now</div> </button>
          
            <!--Price Text-->
            <div 
            style="position:relative; top: 10%; left: 38%;"
            class="priceText">
            16.99
            </div>
          </div>
          
          <!--Column 2-->
          <div class="col">
                    <!--Item Title-->
            <div 
              class="small_div mx-auto text-center textHeaderBanner">
              Meat Lover's Combo
            </div>

            <!--Item Description-->
            <div
              class="small_div mx-auto text-center itemDetailsText">
              Packed with pepperoni deep dish pizza, breadsticks, beef deep dish pizza, 8 pcs side of buffalo wings and buffalo sauce.
            </div>
          </div>       

          <!--Column 3-->
          <div class="col">
            <!--Image-->
            <div class="float-end"
                style="position:relative;">
                <img 
                  class="img-fluid imageFeatured"
                  src="Meat_Lovers_Combo.png"/>
            </div> 
          </div>

           
          </div>

        </div>
      </div>
      
      <!--Spacing between other rows-->
      <div class="row"
      style="margin-top: 3%; margin-bottom: 3%">
      </div>
      
   <!--Banner 2-->
   <div class="row h-25">
    <div class="rectangle">
      <div class="row h-100 justify-content-md-center">
      <!--Column 1-->
      <div class="col">

        <!--Button-->
        <button
        type="button"
        class="btn btn-lg btn-danger btn-outline-dark"
        style="display:flex; position:relative; left: 35%; top: 60%"
        href=""
        > <div class="priceButtonText">Order Now</div> </button>
      
        <!--Price Text-->
        <div 
        style="position:relative; top: 10%; left: 40%;"
        class="priceText">
        7.99
        </div>
      </div>
      
      <!--Column 2-->
      <div class="col">
        <!--Item Title-->
        <div 
          class="small_div mx-auto text-center textHeaderBanner">
          Breadsticks
        </div>

        <!--Item Description-->
        <div
          class="small_div mx-auto text-center itemDetailsText">
          Garlic seasoned breadsticks, freshly buttered and baked for your cravings.        </div>
      </div>       

      <!--Column 3-->
      <div class="col">
        <!--Image-->
        <div class="float-end"
            style="position:relative;">
            <img 
              class="img-fluid imageFeatured"
              src="SunDevil_Breadsticks.png"/>
        </div> 
      </div>

       
      </div>

    </div>
  </div>
  

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>